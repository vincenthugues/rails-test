    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :hashtags %><br>
    <%= f.text_field :hashtags %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
